---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('it');

const youthJury = ['scalafiotti', 'dalmau', 'marroccu', 'dong', 'litvichko'];
const internationalExtra = ['weichert', 'noto'];
---

<Layout title={`${t.jury.title} | ${t.site.title}`}>
  <section class="section">
    <div class="container">
      <h1 class="page-title">{t.jury.title}</h1>

      <p class="intro">{t.jury.intro}</p>

      <div class="jury-section">
        <h2>{t.jury.youthTitle}</h2>
        <p class="days">{t.jury.youthDays}</p>

        <div class="jury-grid">
          {youthJury.map(key => {
            const member = t.jury.members[key];
            const roleKey = member.role as keyof typeof t.jury.roles;
            return (
              <div class={`jury-member ${member.role === 'president' ? 'president' : ''}`}>
                <h3>{member.name}</h3>
                <p class="role">{t.jury.roles[roleKey]}</p>
              </div>
            );
          })}
        </div>
      </div>

      <div class="jury-section">
        <h2>{t.jury.internationalTitle}</h2>
        <p class="days">{t.jury.internationalDays}</p>
        <p class="note">{t.jury.plusPrevious}</p>

        <div class="jury-grid">
          {internationalExtra.map(key => {
            const member = t.jury.members[key];
            const roleKey = member.role as keyof typeof t.jury.roles;
            return (
              <div class="jury-member">
                <h3>{member.name}</h3>
                <p class="role">{t.jury.roles[roleKey]}</p>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-title {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--color-dark);
  }

  .intro {
    font-size: 1.25rem;
    color: var(--color-text);
    line-height: 1.8;
    margin-bottom: 3rem;
    max-width: 750px;
  }

  .jury-section {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #eee;
  }

  .jury-section:last-child {
    border-bottom: none;
  }

  .jury-section h2 {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .days {
    font-style: italic;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .note {
    font-style: italic;
    color: #666;
    margin-bottom: 1.5rem;
  }

  .jury-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .jury-member {
    background: var(--color-light);
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
  }

  .jury-member.president {
    background: #e8f4f8;
    border: 2px solid var(--color-primary);
  }

  .jury-member h3 {
    margin-bottom: 0.5rem;
    color: var(--color-dark);
    font-size: 1.1rem;
  }

  .role {
    color: var(--color-primary);
    font-size: 0.9rem;
    font-weight: 500;
  }
</style>
