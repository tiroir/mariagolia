---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('it');

const juryMembers = [
  { name: 'Nelson', role: 'President', bio: 'Biografia in arrivo.' },
  { name: 'Olga', role: 'Member', bio: 'Biografia in arrivo.' },
  { name: 'Dong', role: 'Member', bio: 'Biografia in arrivo.' },
  { name: 'Ciro', role: 'Member', bio: 'Biografia in arrivo.' },
  { name: 'Anahita', role: 'Member', bio: 'Biografia in arrivo.' },
  { name: 'Sandro', role: 'Member', bio: 'Biografia in arrivo.' },
];
---

<Layout title={`${t.jury.title} | ${t.site.title}`}>
  <section class="section">
    <div class="container">
      <h1 class="page-title">{t.jury.title}</h1>

      <p class="intro">La nostra prestigiosa giuria riunisce pianisti e pedagoghi di fama internazionale.</p>

      <div class="jury-grid">
        {juryMembers.map((member, index) => (
          <div class="jury-member">
            <div class="member-photo">
              <span class="placeholder">Foto</span>
            </div>
            <h3>{member.name}</h3>
            <p class="role">{member.role === 'President' ? t.jury.president : t.jury.members}</p>
            <p class="bio">{member.bio}</p>
          </div>
        ))}
      </div>

      <p class="note">* Le biografie e le foto complete della giuria saranno pubblicate a breve.</p>
    </div>
  </section>
</Layout>

<style>
  .page-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .intro {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .jury-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .jury-member {
    text-align: center;
  }

  .member-photo {
    width: 150px;
    height: 150px;
    margin: 0 auto 1rem;
    background: var(--color-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder {
    color: #999;
    font-size: 0.9rem;
  }

  .jury-member h3 {
    margin-bottom: 0.25rem;
  }

  .role {
    color: var(--color-primary);
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .bio {
    font-size: 0.9rem;
    color: #666;
  }

  .note {
    font-style: italic;
    color: #999;
    text-align: center;
  }
</style>
