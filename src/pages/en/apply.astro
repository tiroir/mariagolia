---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('en');
---

<Layout title={`${t.apply.title} | ${t.site.title}`}>
  <section class="section">
    <div class="container">
      <h1 class="page-title">{t.apply.title}</h1>

      <div class="deadline-banner">
        <strong>{t.apply.deadline}</strong>
      </div>

      <div class="content-grid">
        <div class="info-card">
          <h2>{t.apply.fees.title}</h2>

          <h3>Youth Categories</h3>
          <ul>
            <li>Category A (up to 7 years): €30</li>
            <li>Category B (7-10 years): €35</li>
            <li>Category C (10-12 years): €40</li>
            <li>Category D (12-15 years): €45</li>
          </ul>

          <h3>Maria Golia International</h3>
          <ul>
            <li>Online pre-selection: €70</li>
            <li>Finalists: No additional fee</li>
          </ul>
        </div>

        <div class="info-card">
          <h2>How to Apply</h2>

          <ol>
            <li>Fill out the application form</li>
            <li>Submit required documents:
              <ul>
                <li>Copy of ID/passport</li>
                <li>Recent photo</li>
                <li>Brief biography</li>
              </ul>
            </li>
            <li>Pay the registration fee</li>
            <li>For Maria Golia International: Submit video recording</li>
          </ol>

          <p class="note">Application form coming soon. For early registration inquiries, please contact us.</p>
        </div>

        <div class="info-card full-width">
          <h2>Important Dates</h2>
          <ul class="timeline">
            <li><strong>Registration Opens:</strong> January 2026</li>
            <li><strong>Registration Deadline:</strong> End of February 2026</li>
            <li><strong>Video Submission (International):</strong> March 2026</li>
            <li><strong>Finalists Announcement:</strong> April 2026</li>
            <li><strong>Competition:</strong> May 1-3, 2026</li>
          </ul>
        </div>
      </div>

      <div class="cta-section">
        <h2>Questions?</h2>
        <p>{t.apply.contact}</p>
        <a href="/en/contact" class="btn">Contact Us</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-title {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .deadline-banner {
    background: var(--color-primary);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    text-align: center;
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .info-card {
    background: var(--color-light);
    padding: 2rem;
    border-radius: 8px;
  }

  .info-card.full-width {
    grid-column: 1 / -1;
  }

  .info-card h2 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .info-card h3 {
    font-size: 1rem;
    margin: 1.5rem 0 0.75rem;
    color: var(--color-dark);
  }

  .info-card h3:first-of-type {
    margin-top: 0;
  }

  .info-card ul,
  .info-card ol {
    margin-left: 1.25rem;
  }

  .info-card li {
    margin: 0.5rem 0;
    line-height: 1.5;
  }

  .info-card ul ul {
    margin-top: 0.5rem;
  }

  .note {
    margin-top: 1.5rem;
    padding: 1rem;
    background: #fff8e6;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .timeline {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .timeline li {
    padding: 0.75rem 0;
    border-bottom: 1px solid #ddd;
  }

  .timeline li:last-child {
    border-bottom: none;
  }

  .cta-section {
    text-align: center;
    padding: 3rem;
    background: var(--color-light);
    border-radius: 8px;
  }

  .cta-section h2 {
    margin-bottom: 0.5rem;
  }

  .cta-section p {
    color: #666;
    margin-bottom: 1.5rem;
  }
</style>
