---
import Layout from '../../layouts/Layout.astro';
import ConsentMap from '../../components/ConsentMap.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('en');
const mapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2817.8892774847757!2d7.765833115511!3d45.36222337909961!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478897c13f1f2b4d%3A0x8f5f5f5f5f5f5f5f!2sCastello%20Ducale%20di%20Agli%C3%A8!5e0!3m2!1sen!2sit!4v1234567890";
---

<Layout title={`${t.contact.title} | ${t.site.title}`}>
  <section class="section">
    <div class="container">
      <h1 class="page-title">{t.contact.title}</h1>

      <div class="contact-grid">
        <div class="contact-info">
          <div class="info-block">
            <h2>{t.contact.director}</h2>
            <p class="name">Marina Scalafiotti</p>
          </div>

          <div class="info-block">
            <h2>{t.contact.email}</h2>
            <p><a href="mailto:info@mariagolia.com">info@mariagolia.com</a></p>
          </div>

          <div class="info-block">
            <h2>{t.contact.location}</h2>
            <p>Castello Ducale di Agliè</p>
            <p>Piazza Castello 2</p>
            <p>10011 Agliè (TO), Italy</p>
          </div>

          <div class="info-block social">
            <h2>Follow Us</h2>
            <p>Social media links coming soon</p>
          </div>
        </div>

        <div class="map-container">
          <ConsentMap mapUrl={mapUrl} locale="en" />
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-title {
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-block {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #eee;
  }

  .info-block:last-child {
    border-bottom: none;
  }

  .info-block h2 {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .info-block p {
    margin: 0.25rem 0;
    line-height: 1.6;
  }

  .name {
    font-size: 1.25rem;
    font-weight: 500;
  }

  .info-block a {
    font-size: 1.1rem;
  }

  .map-container {
    border-radius: 8px;
    overflow: hidden;
    background: var(--color-light);
  }

  .map-container iframe {
    display: block;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .map-container {
      order: -1;
    }
  }
</style>
