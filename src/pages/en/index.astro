---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('en');
---

<Layout>
  <section class="hero">
    <div class="hero-bg"></div>
    <div class="container hero-content">
      <img src="/images/logo.png" alt="Maria Golia International Piano Competition" class="hero-logo" />

      <p class="hero-subtitle">INTERNATIONAL PIANO COMPETITION</p>

      <h1 class="hero-date">May 1-3, 2026</h1>
      <p class="hero-location">Castello Ducale di Agliè, Italy</p>

      <a href="/en/apply" class="btn hero-cta">Apply Now</a>
    </div>
  </section>

  <section class="section welcome">
    <div class="container">
      <h2 class="welcome-title">Welcome to the <em>Maria Golia</em> International Piano Competition</h2>
      <p class="welcome-text">
        A prestigious piano competition set in the magnificent Baroque halls of the Castello Ducale di Agliè in Piedmont, Italy.
        Young pianists from around the world compete for prizes and the opportunity to perform in renowned concert halls.
      </p>
    </div>
  </section>

  <section class="section categories">
    <div class="container">
      <div class="cards">
        <div class="card">
          <h3>Section I: Youth Categories</h3>
          <p>Four age categories for young pianists up to 18 years old. A nurturing environment to showcase emerging talent.</p>
          <a href="/en/competition#youth">Learn more →</a>
        </div>
        <div class="card">
          <h3>Section II: International</h3>
          <p>Open to pianists aged 18-32. Pre-selection round followed by finals with cash prizes and concert opportunities.</p>
          <a href="/en/competition#international">Learn more →</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section venue">
    <div class="container">
      <h2 class="section-title">The Venue</h2>
      <div class="venue-content">
        <h3>Castello Ducale di Agliè</h3>
        <p>
          A magnificent Baroque residence in Piedmont, Italy. The castle's historic halls provide an exceptional
          setting for the competition, blending cultural heritage with musical excellence.
        </p>
        <p class="venue-address">Piazza Castello 2, 10011 Agliè (TO), Italy</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    text-align: center;
    overflow: hidden;
    padding: 5.5rem 0 5rem;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(180deg,
        rgba(248, 246, 243, 0.5) 0%,
        rgba(248, 246, 243, 0.7) 50%,
        rgba(248, 246, 243, 0.9) 100%
      ),
      url('/images/hero-bg.png');
    background-color: #f5f2ef;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: 0 1.5rem;
  }

  .hero-logo {
    max-width: 2250px;
    width: 100%;
    height: auto;
    margin-bottom: 0;
  }

  .hero-subtitle {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    letter-spacing: 0.25em;
    color: #32658B;
    margin-bottom: 0.75rem;
    font-weight: 700;
  }

  .hero-date {
    font-family: var(--font-serif);
    font-size: 4rem;
    font-weight: 700;
    color: var(--color-dark);
    letter-spacing: 0.12rem;
    margin-bottom: 0.25rem;
  }

  .hero-location {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 400;
    color: var(--color-text);
    letter-spacing: 0.075rem;
    margin-bottom: 1.5rem;
  }

  .hero-cta {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 400;
    letter-spacing: 0.075rem;
    padding: 1.25rem 4rem;
    min-width: 19rem;
    background: var(--color-button);
  }

  .hero-cta:hover {
    background: #456580;
  }

  /* Welcome section */
  .welcome {
    background: var(--color-light);
    border-top: 1px solid var(--color-border);
  }

  .welcome-title {
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-dark);
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .welcome-title em {
    font-style: italic;
  }

  .welcome-text {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
    color: var(--color-text);
    line-height: 1.8;
  }

  /* Categories cards */
  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .card {
    background: var(--color-white);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }

  .card h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
  }

  .card p {
    color: var(--color-text);
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  .card a {
    font-weight: 500;
  }

  /* Venue section */
  .venue {
    background: var(--color-white);
  }

  .venue-content {
    max-width: 700px;
  }

  .venue-content h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .venue-content p {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: var(--color-text);
  }

  .venue-address {
    font-weight: 500;
    color: var(--color-dark) !important;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 5rem 0 3rem;
    }

    .hero-logo {
      max-width: 90%;
    }

    .hero-date {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 0.75rem;
      letter-spacing: 0.15rem;
      margin-bottom: 1rem;
    }

    .hero-location {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .hero-cta {
      font-size: 1.5rem;
      min-width: 14rem;
      padding: 1rem 2.5rem;
    }
  }
</style>
