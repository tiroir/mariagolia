---
import Layout from '../../layouts/Layout.astro';
import { getTranslations } from '../../i18n/utils';

const t = getTranslations('en');
---

<Layout>
  <section class="hero">
    <div class="container hero-content">
      <img src="/images/logo-piano.png" alt="Maria Golia" class="hero-logo" />
      <h1>{t.home.hero.title}</h1>
      <p class="subtitle">{t.home.hero.subtitle}</p>
      <div class="hero-details">
        <p class="dates">{t.home.hero.dates}</p>
        <p class="location">{t.home.hero.location}</p>
      </div>
      <a href="/en/apply" class="btn">{t.home.hero.cta}</a>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="cards">
        <div class="card">
          <h2>{t.home.sections.youth.title}</h2>
          <p>{t.home.sections.youth.description}</p>
          <a href="/en/competition#youth">Learn more →</a>
        </div>
        <div class="card">
          <h2>{t.home.sections.international.title}</h2>
          <p>{t.home.sections.international.description}</p>
          <a href="/en/competition#international">Learn more →</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section venue">
    <div class="container">
      <h2 class="section-title">Venue</h2>
      <div class="venue-content">
        <div class="venue-text">
          <h3>Castello Ducale di Agliè</h3>
          <p>A magnificent Baroque residence in Piedmont, Italy. The castle's historic halls provide an exceptional setting for the competition, blending cultural heritage with musical excellence.</p>
          <p><strong>Address:</strong> Piazza Castello 2, 10011 Agliè TO, Italy</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--color-light) 0%, #e8f4f8 100%);
    padding: 6rem 0;
    text-align: center;
  }

  .hero-logo {
    max-width: 300px;
    height: auto;
    margin-bottom: 1.5rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    color: var(--color-dark);
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
  }

  .hero-details {
    margin-bottom: 2rem;
  }

  .dates {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .location {
    color: #666;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .card {
    background: var(--color-light);
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--color-primary);
  }

  .card h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .card p {
    color: #666;
    margin-bottom: 1rem;
  }

  .venue {
    background: var(--color-light);
  }

  .venue-content {
    max-width: 700px;
  }

  .venue-text h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .venue-text p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  @media (max-width: 600px) {
    .hero h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }

    .hero-logo {
      max-width: 200px;
    }
  }
</style>
