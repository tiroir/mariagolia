---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLocaleFromUrl, getTranslations, type Locale } from '../i18n/utils';

interface Props {
  title?: string;
  description?: string;
}

const locale = getLocaleFromUrl(Astro.url) as Locale;
const t = getTranslations(locale);
const { title = t.site.title, description = t.site.description } = Astro.props;
---

<!DOCTYPE html>
<html lang={locale}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="icon" type="image/png" href="/images/logo-piano-only.png" />
  <title>{title}</title>
</head>
<body>
  <Header locale={locale} />
  <main>
    <slot />
  </main>
  <Footer locale={locale} />
</body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;1,400;1,500&display=swap');

  :root {
    --color-primary: #5a8a9a;
    --color-primary-dark: #4a7585;
    --color-button: #5a7a8f;
    --color-dark: #2c3e50;
    --color-text: #4a5568;
    --color-light: #f8f6f3;
    --color-cream: #faf9f7;
    --color-white: #ffffff;
    --color-border: #e8e6e3;
    --font-serif: 'Cormorant Garamond', Georgia, serif;
    --font-sans: 'Cormorant Garamond', Georgia, serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-serif);
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: var(--color-cream);
    color: var(--color-dark);
    font-size: 16px;
    line-height: 1.6;
  }

  main {
    flex: 1;
  }

  h1, h2, h3, h4 {
    font-family: var(--font-serif);
    font-weight: 500;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section {
    padding: 4rem 0;
  }

  .section-title {
    font-size: 1.75rem;
    margin-bottom: 2rem;
    color: var(--color-primary);
    font-family: var(--font-serif);
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn:hover {
    background: var(--color-primary-dark);
    text-decoration: none;
  }
</style>
