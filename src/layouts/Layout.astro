---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLocaleFromUrl, getTranslations, type Locale } from '../i18n/utils';

interface Props {
  title?: string;
  description?: string;
}

const locale = getLocaleFromUrl(Astro.url) as Locale;
const t = getTranslations(locale);
const { title = t.site.title, description = t.site.description } = Astro.props;
---

<!DOCTYPE html>
<html lang={locale}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="icon" type="image/png" href="/images/logo-piano-only.png" />
  <title>{title}</title>
</head>
<body>
  <div class="global-bg"></div>
  <Header locale={locale} />
  <div class="content-clip-wrapper">
    <main>
      <slot />
    </main>
    <Footer locale={locale} />
  </div>
</body>
</html>

<style is:global>
  /* Lora font - self-hosted for privacy */
  @font-face {
    font-family: 'Lora';
    font-style: normal;
    font-weight: 400 700;
    font-display: swap;
    src: url('/fonts/lora-latin.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }
  @font-face {
    font-family: 'Lora';
    font-style: italic;
    font-weight: 400 700;
    font-display: swap;
    src: url('/fonts/lora-latin-italic.woff2') format('woff2');
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  :root {
    --color-primary: #5a8a9a;
    --color-primary-dark: #4a7585;
    --color-button: #507290;
    --color-dark: #4c4c4b;
    --color-text: #474645;
    --color-light: #f8f6f3;
    --color-cream: #faf9f7;
    --color-white: #ffffff;
    --color-border: #e8e6e3;
    --font-serif: 'Lora', Georgia, serif;
    --font-sans: 'Lora', Georgia, serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-serif);
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: var(--color-cream);
    color: var(--color-dark);
    font-size: 16px;
    line-height: 1.6;
  }

  .global-bg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    background:
      radial-gradient(ellipse 75% 75% at 50% 0%,
        rgb(248, 246, 243) 0%,
        rgba(248, 246, 243, 0.92) 20%,
        rgba(248, 246, 243, 0.75) 40%,
        rgba(248, 246, 243, 0.4) 60%,
        transparent 80%,
        transparent 100%
      ),
      url('/bg-home.png');
    background-color: #f5f2ef;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .content-clip-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow-y: auto;
    clip-path: inset(140px 0 0 0);
  }

  main {
    flex: 1;
  }

  h1, h2, h3, h4 {
    font-family: var(--font-serif);
    font-weight: 500;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section {
    padding: 4rem 0;
  }

  .section-title {
    font-size: 1.75rem;
    margin-bottom: 2rem;
    color: var(--color-primary);
    font-family: var(--font-serif);
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn:hover {
    background: var(--color-primary-dark);
    text-decoration: none;
  }
</style>
