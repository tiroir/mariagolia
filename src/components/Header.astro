---
import { getTranslations, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const currentPath = Astro.url.pathname;

// Navigation items (without Home, Apply is special)
const navItems = [
  { href: `/${locale}/about`, label: locale === 'en' ? 'About' : 'Chi siamo' },
  { href: `/${locale}/competition`, label: locale === 'en' ? 'Rules' : 'Regolamento' },
  { href: `/${locale}/contact`, label: locale === 'en' ? 'Venue' : 'Location' },
];

// Get alternate locale path
const altLocale = locale === 'en' ? 'it' : 'en';
const altPath = currentPath.replace(`/${locale}`, `/${altLocale}`);
---

<header class="header">
  <div class="container header-inner">
    <div class="lang-switch">
      <a href={altPath.replace(`/${altLocale}`, '/it')} class:list={['lang-link', { active: locale === 'it' }]}>IT</a>
      <span class="lang-sep">/</span>
      <a href={altPath.replace(`/${altLocale}`, '/en')} class:list={['lang-link', { active: locale === 'en' }]}>EN</a>
    </div>

    <nav class="nav">
      {navItems.map(item => (
        <a href={item.href} class:list={['nav-link', { active: currentPath.startsWith(item.href) }]}>
          {item.label}
        </a>
      ))}
      <a href={`/${locale}/apply`} class="nav-btn">
        {locale === 'en' ? 'Apply' : 'Iscrizione'}
      </a>
    </nav>
  </div>
</header>

<style>
  .header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1.5rem 0;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .lang-link {
    font-size: 0.85rem;
    color: var(--color-text);
    padding: 0.25rem;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .lang-link:hover {
    text-decoration: none;
    opacity: 1;
  }

  .lang-link.active {
    opacity: 1;
    font-weight: 500;
  }

  .lang-sep {
    color: var(--color-text);
    opacity: 0.4;
    font-size: 0.85rem;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    color: var(--color-dark);
    font-size: 0.95rem;
    font-weight: 400;
    transition: color 0.2s;
  }

  .nav-link:hover {
    text-decoration: none;
    color: var(--color-primary);
  }

  .nav-link.active {
    color: var(--color-primary);
  }

  .nav-btn {
    background: var(--color-primary);
    color: white;
    padding: 0.35rem 0.9rem;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    transition: background 0.2s;
  }

  .nav-btn:hover {
    background: var(--color-primary-dark);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .header {
      position: relative;
      background: var(--color-cream);
      border-bottom: 1px solid var(--color-border);
    }

    .header-inner {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .nav {
      width: 100%;
      justify-content: center;
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>
