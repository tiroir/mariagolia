---
import { getTranslations, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer-inner">
    <div class="footer-main">
      <p class="footer-title">Maria Golia International Piano Competition</p>
      <p class="footer-venue">Castello Ducale di Agliè · Piedmont, Italy</p>
    </div>
    <div class="footer-meta">
      <p>{t.footer.director}</p>
      <p>© {year} Maria Golia Competition</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-dark);
    color: rgba(255, 255, 255, 0.9);
    padding: 2.5rem 0;
    margin-top: auto;
  }

  .footer-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer-main {
  }

  .footer-title {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .footer-venue {
    font-size: 0.875rem;
    opacity: 0.7;
  }

  .footer-meta {
    text-align: right;
    font-size: 0.875rem;
    opacity: 0.7;
  }

  .footer-meta p {
    margin: 0.25rem 0;
  }

  @media (max-width: 600px) {
    .footer-inner {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .footer-meta {
      text-align: center;
    }
  }
</style>
