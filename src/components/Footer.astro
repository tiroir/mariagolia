---
import { getTranslations, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer-inner">
    <div class="footer-main footer-organizer">
      <img src="/images/orium-logo.png" alt="Orium APS" class="organizer-logo" />
      <p class="organizer-text">{t.footer.organizer} <a href="https://orium-aps.com" target="_blank" rel="noopener">orium-aps.com</a></p>
    </div>
    <div class="footer-meta">
      <p>{t.footer.director}</p>
      <p>Â© {year} Maria Golia Competition</p>
      <p class="privacy-link"><a href={`/${locale}/privacy`}>{locale === 'en' ? 'Privacy Policy' : 'Privacy'}</a></p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-dark);
    color: rgba(255, 255, 255, 0.9);
    padding: 2.5rem 0;
    margin-top: auto;
  }

  .footer-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer-main {
  }

  .footer-organizer {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .organizer-logo {
    height: 50px;
    width: auto;
  }

  .organizer-text {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .organizer-text a {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 500;
  }

  .organizer-text a:hover {
    text-decoration: underline;
  }

  .footer-meta {
    text-align: right;
    font-size: 0.875rem;
    opacity: 0.7;
  }

  .footer-meta p {
    margin: 0.25rem 0;
  }

  .privacy-link {
    margin-top: 0.5rem;
  }

  .privacy-link a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.8rem;
  }

  .privacy-link a:hover {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .footer-inner {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .footer-organizer {
      flex-direction: column;
      gap: 0.75rem;
    }

    .footer-meta {
      text-align: center;
    }
  }
</style>
