---
import { getTranslations, type Locale } from '../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
---

<footer class="footer">
  <div class="container footer-inner">
    <div class="footer-logo">
      <img src="/images/logo-piano-only.png" alt="Maria Golia" width="30" height="40" />
      <span>Maria Golia</span>
    </div>
    <div class="footer-info">
      <p>{t.footer.director}</p>
      <p>{t.footer.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-dark);
    color: var(--color-light);
    padding: 2rem 0;
    margin-top: auto;
  }

  .footer-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  .footer-logo img {
    height: 30px;
    width: auto;
    filter: brightness(0) invert(1);
  }

  .footer-info {
    text-align: right;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .footer-info p {
    margin: 0.25rem 0;
  }

  @media (max-width: 600px) {
    .footer-inner {
      flex-direction: column;
      text-align: center;
    }

    .footer-info {
      text-align: center;
    }
  }
</style>
